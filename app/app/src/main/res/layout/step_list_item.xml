<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/step_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:tag="layout/step_list_item_1">

        <TextView
            android:id="@+id/tv_step_id_label"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/step"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_step_id"
            android:layout_width="@dimen/item_width"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_step_id_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_step_short_description"
            style="@style/step_list_item_primary_text"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_step_id_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_step_id_label"
            tools:text="Starting prep" />
    </android.support.constraint.ConstraintLayout>
</layout>